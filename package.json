{
  "name": "@eclass/eslint-config",
  "version": "1.0.7",
  "description": "eslint shareable config",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier-standard '{src,test}/**/*.js'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eclass/eslint-config"
  },
  "keywords": [
    "eslint",
    "eslint-config",
    "eclass"
  ],
  "engines": {
    "node": "12.6.0"
  },
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eclass/eslint-config/issues"
  },
  "homepage": "https://github.com/eclass/eslint-config#readme",
  "dependencies": {
    "eslint-config-jsdoc-strict": "^2.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^12.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.0.0",
    "@commitlint/config-conventional": "8.0.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/github": "5.4.2",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "eslint": "6.0.1",
    "eslint-plugin-array-func": "3.1.3",
    "eslint-plugin-eslint-comments": "3.1.2",
    "eslint-plugin-import": "2.18.0",
    "eslint-plugin-jsdoc": "15.3.4",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.4.0",
    "eslint-plugin-standard": "4.0.0",
    "husky": "3.0.0",
    "lint-staged": "9.2.0",
    "prettier-standard": "9.1.1",
    "semantic-release": "15.13.18"
  },
  "peerDependencies": {
    "eslint": ">=5",
    "eslint-plugin-array-func": "^3.1.3",
    "eslint-plugin-eslint-comments": "^3.1.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^7.2.3 || ^8.0.0 || ^10.0.0 || ^15.0.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-sonarjs": "^0.4.0",
    "eslint-plugin-standard": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "@eclass:js-lib"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
